  <script>
    // Keyboard accessibility for file upload label
    document.querySelector('.file-upload').addEventListener('keydown', function (e) {
      if (e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        document.getElementById('upload').click();
      }
    });
  </script>

